class TransportVehicle {
  - name : std::string
  - distance : double
  - passengerRatePerKm : double
  - cargoRatePerKmPerKg : double
  - speed : double
  ..
  + TransportVehicle()
  + TransportVehicle(name: const std::string&, distance: double, passengerRate: double, cargoRate: double, speed: double)
  + TransportVehicle(other: const TransportVehicle&)
  + ~TransportVehicle()
  + time_in_path() : double
  + cost_passengers(passengers: int) : double
  + cost_cargo(weightKg: double) : double
  + vehicle_type() : std::string
  + print_header() : void
  + menu() : void
  + GetName() : std::string
  + GetDistance() : double
  + GetPassengerRate() : double
  + GetCargoRate() : double
  + GetSpeed() : double
  + SetName(name: const std::string&) : void
  + SetDistance(distance: double) : void
  + SetPassengerRate(rate: double) : void
  + SetCargoRate(rate: double) : void
  + SetSpeed(speed: double) : void
  + operator>>(is: std::istream&, ob: TransportVehicle&) : std::istream&
  + operator<<(os: std::ostream&, ob: TransportVehicle&) : std::ostream&
  + operator=(other: const TransportVehicle&) : TransportVehicle&
}

