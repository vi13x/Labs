  + vehicle_type() : std::string
  + print_header() : void
  + menu() : void
  + get_fuel_consumption() : double
  + set_fuel_consumption(consumption: double) : void
  + get_fuel_type() : std::string
  + set_fuel_type(type: const std::string&) : void
  + get_mileage_since_maintenance() : double
  + set_mileage_since_maintenance(mileage: double) : void
  + needs_maintenance() : bool
  + calculate_fuel_cost(fuelPrice: double) : double
  + update_mileage(additionalMileage: double) : void
  + operator>>(is: std::istream&, ob: Car&) : std::istream&
  + operator<<(os: std::ostream&, ob: Car&) : std::ostream&
